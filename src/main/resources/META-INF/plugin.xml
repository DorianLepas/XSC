<idea-plugin>

  <!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
  <id>cea.language.xsc_sml_plugin</id>

  <!-- Text to display as name on Preferences/Settings | Plugin page -->
  <name>SML and XCS Support</name>
  <vendor email="cea.com" url="cea.fr">CEA-Leti</vendor>

  <!-- Product and plugin compatibility requirements -->
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.java</depends>

  <!-- Text to display as description on Preferences/Settings | Plugin page -->
  <description>
    <![CDATA[
      <br>Support new languages,
      <i>2 new file types</i>
      <br>
    ]]>
  </description>
  <change-notes>
    <![CDATA[
      <ul>
        <li>SML Language Support.</li>
        <li>XSC Language Support.</li>
      </ul>
    ]]>
  </change-notes>

  <extensions defaultExtensionNs="com.intellij">

    <!-- XSC PLUGIN -->
    <fileType name="XSC" implementationClass="org.intellij.sdk.language.xsc.filetype.XCSFileType"
              fieldName="INSTANCE" language="XSC" extensions="xsc"/>
    <lang.parserDefinition language="XSC"
                           implementationClass="org.intellij.sdk.language.xsc.parser.XCSParserDefinition"/>
    <lang.syntaxHighlighterFactory language="XSC"
                                   implementationClass="org.intellij.sdk.language.xsc.highlighter.XCSSyntaxHighLighterFactory"/>
    <colorSettingsPage implementation="org.intellij.sdk.language.xsc.highlighter.XCSColorSettingsPage"/>
    <langCodeStyleSettingsProvider
            implementation="org.intellij.sdk.language.xsc.codestyle.XCSLanguageCodeStyleSettingsProvider"/>
    <lang.formatter language="XSC"
                    implementationClass="org.intellij.sdk.language.xsc.formatter.XCSFormattingModelBuilder"/>
    <codeStyleSettingsProvider implementation="org.intellij.sdk.language.xsc.codestyle.XCSCodeStyleSettingsProvider"/>
    <completion.contributor language="XSC"
                            implementationClass="org.intellij.sdk.language.xsc.completion.XCSCompletionContributor"/>
    <lang.braceMatcher language="XSC" implementationClass="org.intellij.sdk.language.xsc.bracematcher.XCSBraceMatcher"/>
    <lang.commenter language="XSC" implementationClass="org.intellij.sdk.language.xsc.commenter.XCSCommenter"/>
    <psi.referenceContributor implementation="org.intellij.sdk.language.xsc.reference.XCSReferenceContributor"/>
    <lang.refactoringSupport language="XSC"
                             implementationClass="org.intellij.sdk.language.xsc.reference.XCSRefactoringSupportProvider"/>

    <!-- SML PLUGIN -->
    <fileType name="Sml " implementationClass="org.intellij.sdk.language.sml.fileType.SmlFileType"
              fieldName="INSTANCE" language="SML" extensions="sml"/>
    <lang.parserDefinition language="SML"
                           implementationClass="org.intellij.sdk.language.sml.parser.SmlParserDefinition"/>
    <lang.syntaxHighlighterFactory language="SML"
                                   implementationClass="org.intellij.sdk.language.sml.highlighter.SmlSyntaxHighlighterFactory"/>
    <colorSettingsPage
            implementation="org.intellij.sdk.language.sml.highlighter.SmlColorSettingsPage"/>
    <langCodeStyleSettingsProvider
            implementation="org.intellij.sdk.language.sml.codestyle.SmlLanguageCodeStyleSettingsProvider"/>
    <codeStyleSettingsProvider implementation="org.intellij.sdk.language.sml.codestyle.SmlCodeStyleSettingsProvider"/>
    <annotator language="SML"
               implementationClass="org.intellij.sdk.language.sml.annotator.SmlAnnotator"/>
    <lang.formatter language="SML"
                    implementationClass="org.intellij.sdk.language.sml.formatter.SmlFormattingModelBuilder"/>
  </extensions>
</idea-plugin>
