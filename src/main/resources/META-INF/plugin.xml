<idea-plugin>

  <!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
  <id>org.intellij.sdk.language</id>

  <!-- Text to display as name on Preferences/Settings | Plugin page -->
  <name>XCS Language Sample</name>

  <!-- Product and plugin compatibility requirements -->
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.java</depends>

  <!-- Text to display as description on Preferences/Settings | Plugin page -->
  <description>
    <![CDATA[
      <br>Defines a new language,
      <i>XSC language</i>
      <i>.</i>
      <br>
    ]]>
  </description>
  <change-notes>
    <![CDATA[
      <ul>
        <li>Convert to Gradle-based plugin.</li>
      </ul>
    ]]>
  </change-notes>

  <!-- Text to display as company information on Preferences/Settings | Plugin page -->
  <vendor><!-- --></vendor>

  <extensions defaultExtensionNs="com.intellij">
    <fileType name="XSC" implementationClass="org.intellij.sdk.language.XCSFileType"
              fieldName="INSTANCE" language="XSC" extensions="xsc"/>
    <lang.parserDefinition language="XSC"
                           implementationClass="org.intellij.sdk.language.XCSParserDefinition"/>
    <lang.syntaxHighlighterFactory language="XSC"
                                   implementationClass="org.intellij.sdk.language.XCSSyntaxHighLighterFactory"/>
    <colorSettingsPage implementation="org.intellij.sdk.language.XCSColorSettingsPage"/>
    <langCodeStyleSettingsProvider
            implementation="org.intellij.sdk.language.XCSLanguageCodeStyleSettingsProvider"/>
    <lang.formatter language="XSC"
                    implementationClass="org.intellij.sdk.language.XCSFormattingModelBuilder"/>
    <codeStyleSettingsProvider implementation="org.intellij.sdk.language.XCSCodeStyleSettingsProvider"/>
    <completion.contributor language="XSC"
                            implementationClass="org.intellij.sdk.language.XCSCompletionContributor"/>
    <lang.braceMatcher language="XSC" implementationClass="org.intellij.sdk.language.XCSBraceMatcher"/>
    <lang.commenter language="XSC" implementationClass="org.intellij.sdk.language.XCSCommenter"/>
  </extensions>
</idea-plugin>
